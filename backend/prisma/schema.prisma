generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Chatbot
  Image
  Video
  Programming
  Other
}

enum Pricing {
  free
  paid
}

model Tool {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  category    Category
  website     String
  pricing     Pricing
  released    DateTime
  company     String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
}
